#!/usr/bin/env node

const boxen = require('boxen');
const req = require('@std/esm')(module);
const app = req('../src/server').default;

const host = process.env.HOSTNAME || '0.0.0.0';
const port = Number(process.env.PORT) || 3000;

app.listen(port, () =>
	console.log(
		boxen(`Serving: http://${host}:${port}`, {
			borderColor: 'yellow',
			padding: 1,
		})
	)
);
